@model OnlinePaymentPortal.Areas.Administration.Models.AccountViewModel

@using (Html.BeginForm("AddAccount", "Client", FormMethod.Post))
{
    <div class="container">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModal-label">Select Account Currency</h4>
                </div>
                <div class="modal-body">

                    <form class="col-lg-8" asp-area="Administration" asp-controller="Client" asp-action="AddClient" enctype="multipart/form-data">
                        <div class="form-group">
                            <input asp-for="@Model.ClientId" class="form-control" hidden />
                        </div>
                        <div class="form-group">
                            <label>Select Currency Name: </label>
                            <select class="selectpicker" , asp-for="CurrencyId" asp-items="@Model.Currencies"></select>
                        </div>
                    </form>

                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" id="btnOK" onclick="">OK</button>
                    <button class="btn btn-default" data-dismiss="modal" id="btnCancel">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}
