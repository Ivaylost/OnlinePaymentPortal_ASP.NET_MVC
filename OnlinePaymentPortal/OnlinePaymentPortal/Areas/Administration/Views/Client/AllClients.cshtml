@model AdminViewModel
@using Microsoft.Extensions.Primitives;

<button class="btn btn-outline-success client-button">ADD CLIENT</button>
<div class="modal fade" id="ClientModal" role="dialog" data-url='@Url.Action("AddClientAsync", "Client")'></div>


<h2>All Clients</h2>

<table class="table table-striped table-bordered" id="clients">
    <thead>
        <tr>
            <th>ID</th>
            <th>Client Name</th>
            <th>Adding</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Clients)
        {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Name
            </td>
            <td>
                <button class="btn btn-outline-success account-button" id="@item.Id">ADD Account</button>
            </td>
        </tr>
        }
    </tbody>
</table>

<div>
    <ul class="pagination">
        @if (Model.CurrentPage != 1)
        {
            <a asp-page="/pagination" asp-route-currentpage="@Model.PreviousPage" class="page-link">Prev</a>
        }
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a asp-page="/pagination" asp-route-currentpage="@i" class="page-link">@i</a>
            </li>
        }
        @if (Model.CurrentPage != Model.TotalPages)
        {
            <a asp-page="/pagination" asp-route-currentpage="@Model.NextPage" class="page-link">Next</a>
        }
    </ul>
</div>


<div class="modal fade" id="AccountModal" role="dialog" data-url='@Url.Action("AddAccount", "Client")'></div>






