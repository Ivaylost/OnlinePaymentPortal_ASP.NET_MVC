@model OnlinePaymentPortal.Areas.Administration.Models.AccountViewModel

@using (Html.BeginForm("ChangeBalance", "User", FormMethod.Post))
{
    <div class="container">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModal-label">New Balance</h4>
                </div>
                <div class="modal-body">

                    <form class="col-lg-8" asp-area="Administration" asp-controller="User" asp-action="ChangeBalance">
                        <div class="form-group">
                            <label asp-for="@Model.BalanceValue"></label>
                            <input asp-for="@Model.BalanceValue" class="form-control" />
                            <span asp-validation-for="@Model.BalanceValue" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="@Model.Id" class="form-control" hidden />
                        </div>
                        <div class="form-group">
                            <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
                        </div>
                    </form>

                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" id="btnOK" onclick="">Change</button>
                    <button class="btn btn-default" data-dismiss="modal" id="btnCancel">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}
