@model AdminViewModel
@using Microsoft.Extensions.Primitives;


<h2>All User's ACCOUNTS</h2>


<table class="table table-striped table-bordered" id="clients">
    <thead>
        <tr>
            <th>ID</th>
            <th>ACCOUNT NUMBER</th>
            <th>CLIENT</th>
            <th>BALANCE</th>
            <th>CURENCY</th>
            <th>Change Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Accounts)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.AccountNumber
                </td>
                <td>
                    @item.ClientName
                </td>
                <td>
                    @item.BalanceValue
                </td>
                <td>
                    @item.CurrencyName
                </td>
                <td>
                    <button class="btn btn-outline-success balance-button" id="@item.Id">Change Balance</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="BalanceModal" role="dialog" data-url='@Url.Action("ChangeBalance", "User")'></div>

